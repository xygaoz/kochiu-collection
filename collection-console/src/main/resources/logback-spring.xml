<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">
    <!-- 日志存放路径 -->
    <springProperty scope="context" name="logPath" source="logging.file.path" defaultValue="./logs"/>
    <!-- 控制台输出 -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <!--格式化输出：%d表示日期，%thread表示线程名，%-5level：级别从左显示5个字符宽度%msg：日志消息，%n是换行符-->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{50} - %msg%n</pattern>
        </encoder>
    </appender>
    <!-- 按照每天生成日志文件 -->
    <appender name="RollingFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!--日志文件输出的文件名-->
            <FileNamePattern>${logPath}/collection.%d{yyyy-MM-dd}.log</FileNamePattern>
            <!--日志文件保留天数-->
            <MaxHistory>7</MaxHistory>
        </rollingPolicy>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <!--格式化输出：%d表示日期，%thread表示线程名，%-5level：级别从左显示5个字符宽度%msg：日志消息，%n是换行符-->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{50} - %msg%n</pattern>
        </encoder>
        <!--日志文件最大的大小-->
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <MaxFileSize>10MB</MaxFileSize>
        </triggeringPolicy>
    </appender>
    <appender name="Async-Appender" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="RollingFile" />
    </appender>

    <!-- 日志输出级别 -->
    <root level="debug">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="Async-Appender"/>
    </root>
    <logger name="org.springframework" level="error">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="Async-Appender" />
    </logger>
    <logger name="java.sql" level="info">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="Async-Appender" />
    </logger>
    <logger name="com.ibatis" level="info">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="Async-Appender" />
    </logger>
    <logger name="org.apache.http" level="info">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="Async-Appender" />
    </logger>
    <logger name="com.zaxxer" level="error">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="Async-Appender" />
    </logger>
    <logger name="org.hibernate" level="error">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="Async-Appender" />
    </logger>
    <logger name="org.apache.ibatis" level="error">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="Async-Appender" />
    </logger>
    <logger name="org.apache.fop" level="error">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="Async-Appender" />
    </logger>
    <logger name="org.apache.fontbox" level="error">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="Async-Appender" />
    </logger>
    <logger name="org.docx4j" level="error">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="Async-Appender" />
    </logger>
    <logger name="org.docx4j.fonts.fop.util" level="warn">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="Async-Appender" />
    </logger>
</configuration>
